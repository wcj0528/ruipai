<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:text="您也可以使用社交账号登录：" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_btn_register"
        android:layout_alignTop="@+id/imageButton2"
        android:src="@drawable/qq" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_toLeftOf="@+id/login_btn_register"
        android:src="@drawable/xl" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="119dp"
        android:src="@drawable/wx" />

    <Button
        android:id="@+id/login_btn_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_btn_login"
        android:layout_alignBottom="@+id/login_btn_login"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:background="@drawable/login_btn_selector"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="34dp"
        android:layout_weight="1"
        android:background="@drawable/login_btn_selector"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/login_edit_pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn_register"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="22dp"
        android:layout_weight="1"
        android:background="@drawable/editbg"
        android:drawableLeft="@drawable/login_ed_pass_selector"
        android:drawablePadding="25px"
        android:ems="10"
        android:hint="请输入密码"
        android:password="true"
        android:textColor="#ffffff" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/login_edit_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_edit_pass"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/editbg"
        android:drawableLeft="@drawable/login_ed_id_selector"
        android:drawablePadding="25px"
        android:ems="10"
        android:hint="请输入手机号"
        android:textColor="#ffffff" />

</RelativeLayout>